<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="360dp"
    android:layout_height="800dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="800dp"
        tools:ignore="MissingConstraints"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="360dp"
            android:layout_height="64dp">

            <RelativeLayout
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/mindway_logo" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="608dp"
            android:layout_below="@+id/top"
            android:layout_marginTop="0dp"
            android:paddingLeft="24dp"
            android:paddingTop="8dp"
            android:paddingRight="24dp">

            <RelativeLayout
                android:id="@+id/box"
                android:layout_width="360dp"
                android:layout_height="100dp"
                android:background="@drawable/text_background">

                <ImageView
                    android:id="@+id/siran"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="26dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/siran" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="69dp"
                    android:layout_toRightOf="@id/siran"
                    android:layout_centerVertical="true"
                    >

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineHeight="27sp"
                        android:text="가을 독서 행사"
                        android:textColor="#333333"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/title"
                        android:text="독서의 계절, 가을을 맞아 \n도서관에서 특별한 이벤트를 준비했습니다."
                        android:textSize="12dp" />


                </RelativeLayout>
            </RelativeLayout>
        <RelativeLayout
            android:id="@+id/book_box"
            android:layout_width="match_parent"
            android:layout_height="211dp"
            android:layout_below="@+id/box"
            android:layout_marginTop="20dp"
            android:background="@drawable/shadow_background"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="24dp"
                android:layout_marginRight="24dp">
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="목표 독서량"
                    android:textSize="18sp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right"
                    android:layout_alignParentRight="true"/>
                <RelativeLayout
                    android:id="@+id/bar_box"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/text1"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:id="@+id/bar"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/bar" />

                    <TextView
                        android:id="@+id/text_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/bar"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="-20dp"
                        android:text="9"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/text_slash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/text_9"
                        android:layout_marginRight="-10dp"
                        android:text="/"
                        android:textSize="20dp"
                        android:textColor="@color/gray100"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignLeft="@+id/text_slash"
                        android:text="30"
                        android:layout_marginLeft="10dp"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:textColor="#7EAF72"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/bar_box">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/qwer"/>
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/book_box"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/shadow_background">
            <TextView
                android:id="@+id/text_book_king"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이달의 독서왕"
                android:textSize="18dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rewq"
                android:layout_below="@+id/text_book_king"
                android:layout_marginTop="20dp"/>


        </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>